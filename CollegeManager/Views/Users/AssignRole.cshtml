@using CollegeManager.Data.Models
@model AssignRole

@{
    ViewData["Title"] = "Assign Role";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AssignRole" method="post">
    <div class="form-group">
        <label for="UserId">Select User</label>
        <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
            <option value="">-- Select User --</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="RoleName">Select Role</label>
        <select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(Model.Roles, "Name", "Name"))">
            <option value="">-- Select Role --</option>
        </select>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Assign Role</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

